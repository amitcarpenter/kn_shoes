<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <style>
        :root {
            --primary-color: #4a90e2;
            --secondary-color: #f5f5f5;
            --text-color: #333;
            --error-color: #e74c3c;
            --success-color: #2ecc71;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: var(--secondary-color);
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-group label.required::after {
            content: '*';
            color: var(--error-color);
            margin-left: 0.25rem;
        }

        .form-group input[type="text"],
        .form-group input[type="number"],
        .form-group input[type="email"],
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-group input[type="text"]:focus,
        .form-group input[type="number"]:focus,
        .form-group input[type="email"]:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.2);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem 1rem;
        }

        .checkbox-group label {
            display: flex;
            align-items: center;
            font-weight: normal;
        }

        .checkbox-group input[type="checkbox"] {
            margin-right: 0.5rem;
        }

        .error {
            color: var(--error-color);
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .btn {
            background-color: var(--primary-color);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #3a7abd;
        }

        .btn:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .profit-percentage {
            /* font-weight: bold; */
            color: var(--success-color);
        }

        .color-code {
            display: inline-block;
            width: 20px;
            height: 20px;
            margin-left: 10px;
            border-radius: 50%;
            border: 1px solid #ddd;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Add Product</h2>
        <form id="productForm" action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="product_name" class="required">Product Name</label>
                <input type="text" id="product_name" name="product_name" placeholder="Enter product name" required>
                <div id="product_name_error" class="error"></div>
            </div>

            <div class="form-group">
                <label for="customer_name">Customer Name:</label>
                <input type="text" id="customer_name" name="customer_name" class="form-control">
            </div>



            <div class="form-group">
                <label for="size" class="required">Size</label>
                <input type="number" id="size" name="size" placeholder="Enter size" required>
                <div id="size_error" class="error"></div>
            </div>


            <div class="form-group">
                <label for="salePrice" class="required">Sale Price</label>
                <input type="number" id="salePrice" name="salePrice" placeholder="Enter sale price" required step="0.01"
                    min="0">
                <div id="salePrice_error" class="error"></div>
            </div>

            <div class="form-group">
                <label for="costPrice" class="required">Cost Price</label>
                <input type="number" id="costPrice" name="costPrice" placeholder="Enter cost price" required step="0.01"
                    min="0">
                <div id="costPrice_error" class="error"></div>
                <div id="profitPercentage" class="profit-percentage"></div>
            </div>

            <div class="form-group">
                <label>Profit Percentage</label>
                <div id="profitPercentage" class="profit-percentage"></div>
            </div>

            <div class="form-group">
                <label for="cashAmount" class="required">Cash Amount</label>
                <input type="number" id="cashAmount" name="cashAmount" placeholder="Enter cash amount" required
                    step="0.01" min="0">
                <div id="cashAmount_error" class="error"></div>
            </div>

            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity" placeholder="Enter quantity" min="1" value="1">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3" placeholder="Enter description"></textarea>
            </div>


            <!-- <div class="form-group">
                <label class="required">Color</label>
                <div class="checkbox-group" role="group" aria-labelledby="color_label">
                    <label><input type="checkbox" name="color" value="Black"> Black</label>
                    <label><input type="checkbox" name="color" value="White"> White</label>
                    <label><input type="checkbox" name="color" value="Red"> Red</label>
                    <label><input type="checkbox" name="color" value="Other"> Other</label>
                </div>
                <div id="color_error" class="error"></div>
            </div> -->

            <div class="form-group">
                <label class="required">Color</label>
                <div class="checkbox-group" role="group" aria-labelledby="color_label">
                    <label><input type="checkbox" name="color" value="Black"> Black <span class="color-code"
                            style="background-color: #000000;"></span></label>
                    <label><input type="checkbox" name="color" value="White"> White <span class="color-code"
                            style="background-color: #FFFFFF;"></span></label>
                    <label><input type="checkbox" name="color" value="Red"> Red <span class="color-code"
                            style="background-color: #FF0000;"></span></label>
                    <label><input type="checkbox" name="color" value="Blue"> Blue <span class="color-code"
                            style="background-color: #0000FF;"></span></label>
                    <label><input type="checkbox" name="color" value="Green"> Green <span class="color-code"
                            style="background-color: #008000;"></span></label>
                    <label><input type="checkbox" name="color" value="Yellow"> Yellow <span class="color-code"
                            style="background-color: #FFFF00;"></span></label>
                    <label><input type="checkbox" name="color" value="Other"> Other</label>
                </div>
                <div id="color_error" class="error"></div>
            </div>


            <div class="form-group">
                <label class="required">Product Type</label>
                <div class="checkbox-group" role="group" aria-labelledby="product_type_label">
                    <label><input type="checkbox" name="product_type" value="Slipper"> Slipper</label>
                    <label><input type="checkbox" name="product_type" value="Slide"> Slide</label>
                    <label><input type="checkbox" name="product_type" value="Crocs"> Crocs</label>
                    <label><input type="checkbox" name="product_type" value="Flip Flop"> Flip Flop</label>
                    <label><input type="checkbox" name="product_type" value="Walker"> Walker</label>
                    <label><input type="checkbox" name="product_type" value="Shoes"> Shoes</label>
                </div>
                <div id="product_type_error" class="error"></div>
            </div>

            <div class="form-group">
                <label class="required">Category</label>
                <div class="checkbox-group" role="group" aria-labelledby="category_label">
                    <label><input type="checkbox" name="category" value="Men"> Men</label>
                    <label><input type="checkbox" name="category" value="Women"> Women</label>
                    <label><input type="checkbox" name="category" value="Kids"> Kids</label>
                </div>
                <div id="category_error" class="error"></div>
            </div>


            <div class="form-group">
                <label class="required">Brand</label>
                <div class="checkbox-group" role="group" aria-labelledby="brand_label">
                    <label><input type="checkbox" name="brand" value="Campus"> Campus</label>
                    <label><input type="checkbox" name="brand" value="Sparx"> Sparx</label>
                    <label><input type="checkbox" name="brand" value="Lakhani"> Lakhani</label>
                    <label><input type="checkbox" name="brand" value="Touch"> Touch</label>
                    <label><input type="checkbox" name="brand" value="Abros"> Abros</label>
                    <label><input type="checkbox" name="brand" value="Addoxy"> Addoxy</label>
                    <label><input type="checkbox" name="brand" value="TRV"> TRV</label>
                    <label><input type="checkbox" name="brand" value="Nike"> Nike</label>
                    <label><input type="checkbox" name="brand" value="Puma"> Puma</label>
                    <label><input type="checkbox" name="brand" value="Adidas"> Adidas</label>
                    <label><input type="checkbox" name="brand" value="Asics"> Asics</label>
                    <label><input type="checkbox" name="brand" value="VKC Pride"> VKC Pride</label>
                    <label><input type="checkbox" name="brand" value="Walkaro"> Walkaro</label>
                    <label><input type="checkbox" name="brand" value="Paragon"> Paragon</label>
                    <label><input type="checkbox" name="brand" value="Indus"> Indus</label>
                    <label><input type="checkbox" name="brand" value="I Plus"> I Plus</label>
                    <label><input type="checkbox" name="brand" value="Loose Chappal"> Loose Chappal</label>
                    <label><input type="checkbox" name="brand" value="Appoxy"> Appoxy</label>
                    <label><input type="checkbox" name="brand" value="Fancy "> Fancy </label>
                    <label><input type="checkbox" name="brand" value="Non Brand Other"> Non Brand Other</label>
                </div>
                <div id="brand_error" class="error"></div>
            </div>



            <div class="form-group">
                <label class="required">Payment Method</label>
                <div class="checkbox-group" role="group" aria-labelledby="payment_method_label">
                    <label><input type="checkbox" name="payment_method" value="Cash"> Cash</label>
                    <label><input type="checkbox" name="payment_method" value="Online"> Online</label>
                </div>
                <div id="payment_method_error" class="error"></div>
            </div>

            <div class="form-group">
                <label for="product_image">Product Image</label>
                <input type="file" id="product_image" name="product_image" accept="image/*">
            </div>

            <button type="submit" class="btn" id="submitBtn">Add Product</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('productForm');
            const submitBtn = document.getElementById('submitBtn');

            // Function to handle single checkbox selection
            const handleSingleCheckboxSelection = (checkboxGroup) => {
                checkboxGroup.forEach(checkbox => {
                    checkbox.addEventListener('change', () => {
                        if (checkbox.checked) {
                            checkboxGroup.forEach(otherCheckbox => {
                                if (otherCheckbox !== checkbox) {
                                    otherCheckbox.checked = false;
                                }
                            });
                        }
                    });
                });
            };

            // Apply single checkbox selection to all checkbox groups
            const checkboxGroups = ['product_type', 'category', 'color', 'brand', 'payment_method'];
            checkboxGroups.forEach(groupName => {
                const checkboxes = document.querySelectorAll(`input[name="${groupName}"]`);
                handleSingleCheckboxSelection(checkboxes);
            });

            // Validate individual field
            const validateField = (field) => {
                const errorElement = document.getElementById(`${field.id}_error`);
                if (field.required && !field.value.trim()) {
                    errorElement.textContent = 'This field is required';
                    return false;
                }
                if (field.type === 'number' && parseFloat(field.value) <= -1) {
                    errorElement.textContent = 'Value must be greater than 0';
                    return false;
                }
                errorElement.textContent = '';
                return true;
            };

            // Validate checkbox group
            const validateCheckboxGroup = (groupName) => {
                const checkboxes = document.querySelectorAll(`input[name="${groupName}"]:checked`);
                const errorElement = document.getElementById(`${groupName}_error`);
                if (checkboxes.length === 0) {
                    errorElement.textContent = 'Please select one option';
                    return false;
                }
                errorElement.textContent = '';
                return true;
            };


            // Calculate and display profit percentage
            const calculateProfitPercentage = () => {
                const salePrice = parseFloat(document.getElementById('salePrice').value) || 0;
                const costPrice = parseFloat(document.getElementById('costPrice').value) || 0;
                const profitPercentageElement = document.getElementById('profitPercentage');

                if (costPrice > 0 && salePrice > costPrice) {
                    const profitPercentage = ((salePrice - costPrice) / costPrice * 100).toFixed(2);
                    const profieAmount = salePrice - costPrice
                    profitPercentageElement.textContent = `Profit Percentage: ${profitPercentage}%  && Profit Amount : ${profieAmount}`;

                    profitPercentageElement.style.color = 'green';

                } else {
                    profitPercentageElement.textContent = 'Cost price should be less than sale price';
                    profitPercentageElement.style.color = 'red';
                }
            };

            // Validate form
            const validateForm = () => {
                const requiredFields = form.querySelectorAll('input[required], select[required], textarea[required]');
                const requiredCheckboxGroups = ['product_type', 'category', 'color', 'brand', 'payment_method'];

                let isValid = true;

                requiredFields.forEach(field => {
                    if (!validateField(field)) {
                        isValid = false;
                    }
                });

                requiredCheckboxGroups.forEach(groupName => {
                    if (!validateCheckboxGroup(groupName)) {
                        isValid = false;
                    }
                });

                submitBtn.disabled = !isValid;
            };

            // Add event listeners
            form.addEventListener('input', validateForm);
            form.addEventListener('change', validateForm);

            document.getElementById('salePrice').addEventListener('input', calculateProfitPercentage);
            document.getElementById('costPrice').addEventListener('input', calculateProfitPercentage);

            // Handle form submission
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                validateForm();

                if (!submitBtn.disabled) {
                    try {
                        const formData = new FormData(form);
                        const response = await fetch(form.action, {
                            method: 'POST',
                            body: formData
                        });

                        if (response.ok) {
                            alert('Product added successfully!');
                            form.reset();
                            document.getElementById('quantity').value = 1; // Reset default quantity
                            document.getElementById('profitPercentage').textContent = ''; // Clear profit percentage
                        } else {
                            const errorData = await response.json();
                            alert(`Error: ${errorData.message}`);
                        }
                    } catch (error) {
                        console.error('Error submitting form:', error);
                        alert('An error occurred while submitting the form. Please try again.');
                    }
                }
            });

            // Initial form validation
            validateForm();
        });
    </script>
</body>

</html>